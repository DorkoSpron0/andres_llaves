---
interface Props {
  class?: string;
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<article
  class={`${Astro.props.class}  relative rounded backdrop-blur-md border border-black/10 shadow-inner shadow-white/10 bg-red-500`}
>
  <slot name="image" />

  <div
    class="select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full"
  >
    <h2 class="text-3xl font-semibold text-balance text-white mb-4">{title}</h2>
    <p class="text-3xl font-semibold text-sky-200/80 -mt-4">{subtitle}</p>
    <slot name="content" />
  </div>
</article>
