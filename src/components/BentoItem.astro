---
interface Props {
  class?: string;
  title: string;
}
const { title } = Astro.props;
---

<article
  class={`${Astro.props.class}  relative rounded backdrop-blur-md shadow-inner shadow-white/10 bg-gray-500 group hover:scale-105 transition-scale duration-700 ease-in-out `}
>
  <div
    class="absolute z-10 bottom-0 top-0 w-full h-full bg-gradient-to-b from-transparent via-black/50 to-black/100"
  >
  </div>

  <slot name="image" />

  <div
    class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full"
  >
    <h2
      class="text-xl md:text-3xl font-semibold text-balance text-white md:mb-4"
    >
      {title}
    </h2>
    <slot name="content" />
  </div>
</article>
