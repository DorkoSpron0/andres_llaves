---
interface Props {
  class?: string;
  title: string;
}
const { title } = Astro.props;
---

<article
  class={`${Astro.props.class}  relative rounded backdrop-blur-md border border-black/10 shadow-inner shadow-white/10 bg-gray-500`}
>
  <slot name="image" />

  <div
    class="select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full"
  >
    <h2
      class="text-xl md:text-3xl font-semibold text-balance text-white md:mb-4"
    >
      {title}
    </h2>
    <slot name="content" />
  </div>
</article>
